<div class="page-header">
  <%= link_to publications_path, class: 'btn btn-default' do %>
    All Publications
  <% end %>
  <%= link_to edit_publication_path(@publication), class: 'btn btn-primary' do %>
    Edit
  <% end %>

  <%= link_to "published feed", 
              publication_contact_conversation_path(
                @publication, 
                @publication.contact.mailbox.conversations.find_by_subject(@publication.name)
              ) 
  %>

  <h1><%= @publication.name %></h1>

  <%= render "form_to_initialize_broadcast" %>

</div>

<div class="grid-container">
  <%= render partial: "card" , collection: @publication.broadcasts %>

</div>