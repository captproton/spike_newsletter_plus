


<div class="row">
  <div class="col-sm-6">
    <h1>Publications</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_publication_path, class: 'btn btn-primary' do %>
    Add New Publication
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            
      </tr>
    </thead>

    <tbody>
      <% @publications.each do |publication| %>
        <%= content_tag :tr, id: dom_id(publication), class: dom_class(publication) do %>
          
            <td><%= link_to publication.name, publication %></td>
          

          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
